# Midnight Network Configuration
MIDNIGHT_NETWORK=testnet
MIDNIGHT_NODE_URL=https://testnet.midnight.network
MIDNIGHT_INDEXER_URL=https://indexer.testnet.midnight.network

# Proof Server Configuration
PROOF_SERVER_URL=http://localhost:6300

# Wallet Configuration
WALLET_PRIVATE_KEY=your_private_key_here
WALLET_MNEMONIC=your_mnemonic_phrase_here

# XRPL Configuration
XRPL_NETWORK=testnet
XRPL_NODE_URL=wss://s.altnet.rippletest.net:51233
XRPL_WALLET_SECRET=your_xrpl_secret_here

# Application Configuration
PORT=3000
NODE_ENV=development

# Web3 Domain Configuration
WEB3_DOMAIN_PROVIDER=https://api.web3domain.provider
WEB3_DOMAIN_API_KEY=your_api_key_here

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Database (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/agility

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/agility.log

# Feature Flags
ENABLE_KYC=true
ENABLE_ESCROW=true
ENABLE_CROSS_CHAIN=true
